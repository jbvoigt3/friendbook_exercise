<p id="notice" class=<%= notice ? 'success' : ''%>>
  <%= notice %>
</p>

<div class="ui card">
  <div class="image">
    <img 
      src="https://robohash.org/<%= @person.get_avatar %>?set=set3" 
      alt="avatar"
    />
  </div>
  <div class="content">
    <p class="header">
      <%= @person.full_name %>
    </p>
    <div class="meta">
      <%= @person.phone %>
    </div>
    <div class="description">
      <%= @person.email %>
    </div>
  </div>
  <div class="extra content">
    <%= link_to 'Edit', edit_person_path(@person) %> |
    <%= link_to 'Back', people_path %>
  </div>
</div>

